---
interface Props {
	title?: string;
}
const { title = "Kairos Capital — We Buy Businesses. To Build Legacies." } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,600;1,300;1,400&family=Barlow:wght@300;400;500;600&family=Barlow+Condensed:wght@400;500;600;700&display=swap" rel="stylesheet" />
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	*, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

	:root {
		--gold: #f4be47;
		--gold-dim: #c9993a;
		--black: #0c0c0b;
		--ink: #111110;
		--charcoal: #1c1c1a;
		--stone: #2e2e2b;
		--ash: #5a5a55;
		--fog: #a8a8a0;
		--light: #f0ede6;
		--white: #faf9f6;
		--font-display: 'Cormorant Garamond', Georgia, serif;
		--font-body: 'Barlow', sans-serif;
		--font-label: 'Barlow Condensed', sans-serif;
	}

	html { scroll-behavior: smooth; }

	body {
		background: var(--ink);
		color: var(--white);
		font-family: var(--font-body);
		font-weight: 300;
		line-height: 1.6;
		overflow-x: hidden;
	}

	/* ── NAV ── */
	nav {
		position: fixed;
		top: 0; left: 0; right: 0;
		z-index: 100;
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1.25rem 3rem;
		border-bottom: 1px solid rgba(244,190,71,0.12);
		background: rgba(12,12,11,0.85);
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
	}

	.nav-logo {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		text-decoration: none;
	}

	.nav-logo-mark {
		width: 32px;
		height: 32px;
	}

	.nav-logo-text {
		font-family: var(--font-label);
		font-weight: 600;
		font-size: 1rem;
		letter-spacing: 0.18em;
		text-transform: uppercase;
		color: var(--white);
	}

	.nav-links {
		display: flex;
		gap: 2.5rem;
		list-style: none;
	}

	.nav-links a {
		font-family: var(--font-label);
		font-weight: 500;
		font-size: 0.8rem;
		letter-spacing: 0.14em;
		text-transform: uppercase;
		color: var(--fog);
		text-decoration: none;
		transition: color 0.2s;
	}

	.nav-links a:hover { color: var(--gold); }

	.nav-cta {
		font-family: var(--font-label);
		font-weight: 600;
		font-size: 0.78rem;
		letter-spacing: 0.14em;
		text-transform: uppercase;
		color: var(--black) !important;
		background: var(--gold);
		padding: 0.6rem 1.4rem;
		text-decoration: none;
		transition: background 0.2s;
	}

	.nav-cta:hover { background: var(--gold-dim) !important; color: var(--black) !important; }

	/* ── HERO ── */
	.hero {
		min-height: 100vh;
		display: grid;
		grid-template-columns: 1fr 1fr;
		position: relative;
		overflow: hidden;
	}

	.hero::before {
		content: '';
		position: absolute;
		inset: 0;
		background:
			radial-gradient(ellipse 60% 50% at 70% 50%, rgba(244,190,71,0.06) 0%, transparent 70%),
			radial-gradient(ellipse 40% 60% at 20% 80%, rgba(244,190,71,0.03) 0%, transparent 60%);
		pointer-events: none;
	}

	.hero::after {
		content: '';
		position: absolute;
		inset: 0;
		background-image:
			linear-gradient(rgba(244,190,71,0.04) 1px, transparent 1px),
			linear-gradient(90deg, rgba(244,190,71,0.04) 1px, transparent 1px);
		background-size: 80px 80px;
		pointer-events: none;
	}

	.hero-content {
		display: flex;
		flex-direction: column;
		justify-content: center;
		padding: 8rem 3rem 6rem 3rem;
		position: relative;
		z-index: 2;
	}

	.hero-eyebrow {
		font-family: var(--font-label);
		font-weight: 500;
		font-size: 0.75rem;
		letter-spacing: 0.22em;
		text-transform: uppercase;
		color: var(--gold);
		margin-bottom: 2rem;
		opacity: 0;
		animation: fadeUp 0.8s ease forwards 0.2s;
	}

	.hero-eyebrow::before {
		content: '';
		display: inline-block;
		width: 2rem;
		height: 1px;
		background: var(--gold);
		vertical-align: middle;
		margin-right: 0.75rem;
	}

	.hero-headline {
		font-family: var(--font-display);
		font-weight: 300;
		font-size: clamp(3.2rem, 6vw, 6rem);
		line-height: 1.05;
		color: var(--white);
		opacity: 0;
		animation: fadeUp 0.9s ease forwards 0.4s;
	}

	.hero-headline em {
		font-style: italic;
		color: var(--gold);
	}

	.hero-sub {
		margin-top: 2rem;
		font-size: 1.05rem;
		font-weight: 300;
		color: var(--fog);
		max-width: 420px;
		line-height: 1.7;
		opacity: 0;
		animation: fadeUp 0.9s ease forwards 0.6s;
	}

	.hero-actions {
		margin-top: 3rem;
		display: flex;
		gap: 1.25rem;
		align-items: center;
		opacity: 0;
		animation: fadeUp 0.9s ease forwards 0.8s;
	}

	.btn-primary {
		font-family: var(--font-label);
		font-weight: 600;
		font-size: 0.82rem;
		letter-spacing: 0.14em;
		text-transform: uppercase;
		background: var(--gold);
		color: var(--black);
		padding: 1rem 2.2rem;
		text-decoration: none;
		display: inline-block;
		transition: background 0.2s, transform 0.2s;
	}

	.btn-primary:hover { background: var(--gold-dim); transform: translateY(-1px); }

	.btn-ghost {
		font-family: var(--font-label);
		font-weight: 500;
		font-size: 0.82rem;
		letter-spacing: 0.14em;
		text-transform: uppercase;
		color: var(--fog);
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		transition: color 0.2s;
	}

	.btn-ghost:hover { color: var(--white); }
	.btn-ghost::after { content: '→'; transition: transform 0.2s; }
	.btn-ghost:hover::after { transform: translateX(4px); }

	.hero-visual {
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
		z-index: 2;
		opacity: 0;
		animation: fadeIn 1.2s ease forwards 0.6s;
	}

	.hero-mark {
		width: min(360px, 40vw);
		opacity: 0.08;
	}

	.hero-stat-bar {
		position: absolute;
		bottom: 3rem;
		left: 3rem;
		right: 3rem;
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 1px;
		background: rgba(244,190,71,0.15);
		z-index: 2;
		opacity: 0;
		animation: fadeUp 0.9s ease forwards 1s;
	}

	.hero-stat {
		background: var(--ink);
		padding: 1.5rem 2rem;
		border-top: 2px solid transparent;
		transition: border-color 0.3s;
	}

	.hero-stat:hover { border-color: var(--gold); }

	.stat-number {
		font-family: var(--font-display);
		font-size: 2.4rem;
		font-weight: 300;
		color: var(--white);
		line-height: 1;
	}

	.stat-number span {
		color: var(--gold);
	}

	.stat-label {
		font-family: var(--font-label);
		font-size: 0.72rem;
		letter-spacing: 0.16em;
		text-transform: uppercase;
		color: var(--ash);
		margin-top: 0.4rem;
	}

	/* ── SECTION WRAPPER ── */
	section {
		padding: 7rem 3rem;
	}

	.section-inner {
		max-width: 1200px;
		margin: 0 auto;
	}

	.section-label {
		font-family: var(--font-label);
		font-size: 0.72rem;
		font-weight: 500;
		letter-spacing: 0.22em;
		text-transform: uppercase;
		color: var(--gold);
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 1.5rem;
	}

	.section-label::before {
		content: '';
		width: 1.5rem;
		height: 1px;
		background: var(--gold);
	}

	/* ── ABOUT SECTION ── */
	.about {
		background: var(--charcoal);
		border-top: 1px solid var(--stone);
		border-bottom: 1px solid var(--stone);
	}

	.about-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 6rem;
		align-items: center;
	}

	.about-headline {
		font-family: var(--font-display);
		font-size: clamp(2rem, 3.5vw, 3.2rem);
		font-weight: 300;
		line-height: 1.15;
		color: var(--white);
	}

	.about-headline em {
		font-style: italic;
		color: var(--gold);
	}

	.about-body p {
		color: var(--fog);
		font-size: 1rem;
		line-height: 1.8;
		margin-bottom: 1.5rem;
	}

	.about-body p:last-child { margin-bottom: 0; }

	/* ── HOW WE BUY ── */
	.how {
		background: var(--ink);
	}

	.how-intro {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		margin-bottom: 5rem;
	}

	.how-headline {
		font-family: var(--font-display);
		font-size: clamp(2rem, 3.5vw, 3.2rem);
		font-weight: 300;
		line-height: 1.15;
		color: var(--white);
	}

	.how-desc {
		color: var(--fog);
		font-size: 1rem;
		line-height: 1.8;
		align-self: end;
	}

	.steps {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 1px;
		background: var(--stone);
	}

	.step {
		background: var(--ink);
		padding: 2.5rem 2rem;
		position: relative;
		overflow: hidden;
		transition: background 0.3s;
	}

	.step:hover { background: var(--charcoal); }

	.step::before {
		content: '';
		position: absolute;
		top: 0; left: 0; right: 0;
		height: 2px;
		background: transparent;
		transition: background 0.3s;
	}

	.step:hover::before { background: var(--gold); }

	.step-number {
		font-family: var(--font-display);
		font-size: 3.5rem;
		font-weight: 300;
		color: var(--stone);
		line-height: 1;
		margin-bottom: 1.5rem;
		transition: color 0.3s;
	}

	.step:hover .step-number { color: var(--gold); opacity: 0.3; }

	.step-title {
		font-family: var(--font-label);
		font-size: 0.85rem;
		font-weight: 600;
		letter-spacing: 0.12em;
		text-transform: uppercase;
		color: var(--white);
		margin-bottom: 0.75rem;
	}

	.step-body {
		font-size: 0.9rem;
		color: var(--ash);
		line-height: 1.7;
	}

	/* ── CRITERIA ── */
	.criteria {
		background: var(--charcoal);
		border-top: 1px solid var(--stone);
		border-bottom: 1px solid var(--stone);
	}

	.criteria-grid {
		display: grid;
		grid-template-columns: 1fr 2fr;
		gap: 6rem;
		align-items: start;
	}

	.criteria-headline {
		font-family: var(--font-display);
		font-size: clamp(2rem, 3vw, 2.8rem);
		font-weight: 300;
		line-height: 1.15;
		color: var(--white);
		position: sticky;
		top: 8rem;
	}

	.criteria-headline em { font-style: italic; color: var(--gold); }

	.criteria-list {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1px;
		background: var(--stone);
	}

	.criteria-item {
		background: var(--charcoal);
		padding: 2rem;
		border-top: 2px solid transparent;
		transition: border-color 0.3s, background 0.3s;
	}

	.criteria-item:hover {
		border-color: var(--gold);
		background: var(--ink);
	}

	.criteria-icon {
		font-size: 1.4rem;
		margin-bottom: 0.75rem;
		opacity: 0.7;
	}

	.criteria-title {
		font-family: var(--font-label);
		font-size: 0.82rem;
		font-weight: 600;
		letter-spacing: 0.12em;
		text-transform: uppercase;
		color: var(--white);
		margin-bottom: 0.5rem;
	}

	.criteria-desc {
		font-size: 0.88rem;
		color: var(--ash);
		line-height: 1.65;
	}

	/* ── PROMISE ── */
	.promise {
		background: var(--gold);
		padding: 7rem 3rem;
	}

	.promise-inner {
		max-width: 1200px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 6rem;
		align-items: center;
	}

	.promise-headline {
		font-family: var(--font-display);
		font-size: clamp(2.5rem, 4vw, 4rem);
		font-weight: 300;
		line-height: 1.1;
		color: var(--black);
	}

	.promise-points {
		list-style: none;
	}

	.promise-points li {
		font-size: 1rem;
		color: var(--ink);
		font-weight: 400;
		line-height: 1.7;
		padding: 1.25rem 0;
		border-bottom: 1px solid rgba(12,12,11,0.15);
		display: flex;
		gap: 1rem;
		align-items: flex-start;
	}

	.promise-points li:first-child { border-top: 1px solid rgba(12,12,11,0.15); }

	.promise-points li::before {
		content: '→';
		font-family: var(--font-label);
		font-weight: 600;
		flex-shrink: 0;
		margin-top: 0.1rem;
	}

	/* ── CTA ── */
	.cta-section {
		background: var(--ink);
		text-align: center;
		padding: 8rem 3rem;
	}

	.cta-headline {
		font-family: var(--font-display);
		font-size: clamp(2.5rem, 5vw, 5rem);
		font-weight: 300;
		color: var(--white);
		line-height: 1.1;
		margin-bottom: 1.5rem;
	}

	.cta-headline em { font-style: italic; color: var(--gold); }

	.cta-sub {
		font-size: 1rem;
		color: var(--fog);
		max-width: 480px;
		margin: 0 auto 3rem;
		line-height: 1.7;
	}

	/* ── FOOTER ── */
	footer {
		background: var(--black);
		border-top: 1px solid var(--stone);
		padding: 3rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.footer-logo {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.footer-wordmark {
		font-family: var(--font-label);
		font-size: 0.85rem;
		font-weight: 600;
		letter-spacing: 0.18em;
		text-transform: uppercase;
		color: var(--ash);
	}

	.footer-copy {
		font-family: var(--font-label);
		font-size: 0.72rem;
		letter-spacing: 0.1em;
		color: var(--stone);
		text-transform: uppercase;
	}

	.footer-links {
		display: flex;
		gap: 2rem;
		list-style: none;
	}

	.footer-links a {
		font-family: var(--font-label);
		font-size: 0.72rem;
		letter-spacing: 0.12em;
		text-transform: uppercase;
		color: var(--ash);
		text-decoration: none;
		transition: color 0.2s;
	}

	.footer-links a:hover { color: var(--gold); }

	/* ── ANIMATIONS ── */
	@keyframes fadeUp {
		from { opacity: 0; transform: translateY(24px); }
		to   { opacity: 1; transform: translateY(0); }
	}

	@keyframes fadeIn {
		from { opacity: 0; }
		to   { opacity: 1; }
	}

	.reveal {
		opacity: 0;
		transform: translateY(30px);
		transition: opacity 0.7s ease, transform 0.7s ease;
	}

	.reveal.visible {
		opacity: 1;
		transform: translateY(0);
	}

	/* ── PAGE LAYOUT (default template) ── */
	.page-content {
		padding: 8rem 3rem 5rem;
		max-width: 720px;
		margin: 0 auto;
	}

	.page-content h1 {
		font-family: var(--font-display);
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 300;
		color: var(--white);
		margin-bottom: 1.5rem;
	}

	.page-content :global(.prose) {
		color: var(--fog);
		line-height: 1.8;
	}

	.page-content :global(.prose p) {
		margin-bottom: 1rem;
	}

	/* ── RESPONSIVE ── */
	@media (max-width: 900px) {
		nav { padding: 1.25rem 1.5rem; }
		.nav-links { display: none; }
		section { padding: 5rem 1.5rem; }

		.hero { grid-template-columns: 1fr; }
		.hero-content { padding: 8rem 1.5rem 3rem; }
		.hero-visual { display: none; }
		.hero-stat-bar { left: 1.5rem; right: 1.5rem; grid-template-columns: 1fr; }

		.about-grid,
		.how-intro,
		.criteria-grid,
		.promise-inner { grid-template-columns: 1fr; gap: 2.5rem; }

		.steps { grid-template-columns: 1fr 1fr; }
		.criteria-list { grid-template-columns: 1fr; }
		.criteria-headline { position: static; }

		footer { flex-direction: column; gap: 1.5rem; text-align: center; }
		.footer-links { flex-wrap: wrap; justify-content: center; }
	}
</style>

<script is:inline>
	(function() {
		const reveals = document.querySelectorAll('.reveal');
		const observer = new IntersectionObserver((entries) => {
			entries.forEach(function(e) {
				if (e.isIntersecting) {
					e.target.classList.add('visible');
					observer.unobserve(e.target);
				}
			});
		}, { threshold: 0.1, rootMargin: '0px 0px -60px 0px' });
		reveals.forEach(function(el) { observer.observe(el); });
	})();
</script>
